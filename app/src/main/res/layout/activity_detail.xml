<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingEnd="@dimen/activity_horizontal_margin"
    android:paddingStart="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.lethalizer.robby.cataloguemovie.activity.DetailActivity">

    <LinearLayout
        android:id="@+id/layout_detail_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:background="@color/colorPrimaryDark"
            android:layout_marginBottom="@dimen/activity_vertical_margin">
            <ImageView
                android:id="@+id/img_detail_poster"
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:contentDescription="@string/the_movie_s_poster"
                android:background="@android:color/white"/>
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/img_detail_poster"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:text="@string/title"
                android:layout_marginTop="25dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:maxLines="2"
                android:ellipsize="end"/>
            <TextView
                android:id="@+id/tv_release_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/release_date"
                android:textStyle="italic"
                android:layout_toRightOf="@id/img_detail_poster"
                android:layout_below="@id/tv_title"
                android:textColor="@android:color/white"
                android:layout_marginBottom="@dimen/activity_vertical_margin"/>
            <TextView
                android:id="@+id/tv_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_release_date"
                android:layout_toRightOf="@id/img_detail_poster"
                android:layout_centerHorizontal="true"
                android:drawableLeft="@drawable/ic_stars_black_24dp"
                android:drawableTint="@color/colorAccent"
                android:gravity="center"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:text="@string/score"
                android:textStyle="italic"
                android:drawablePadding="8dp"
                android:textColor="@color/colorAccent"/>
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/overview"
            android:drawableStart="@drawable/ic_library_books_black_24dp"
            android:drawableLeft="@drawable/ic_library_books_black_24dp"
            android:drawablePadding="8dp"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:textStyle="bold"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/tv_overview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/movie_overview"
            android:textStyle="italic"
            android:layout_marginBottom="@dimen/activity_vertical_margin"/>

    </LinearLayout>

</ScrollView>
